@import "../common/common.wxss";
.user_reset{
  width: 100%;
  height:100%;
  overflow: hidden;
  box-sizing:border-box;
  -webkit-box-sizing: border-box;
  margin-top: 30%;
}
.user_reset input{
  float: left;
  /* border:1px solid #ff0033; */
  background: #fff;
  width:80%;
  height:40rpx;
  line-height:40rpx;
  margin-left: 5%;
   padding:15rpx 20rpx; 
  padding-left:40rpx;
  box-shadow: 8px 6px 6px #ccc;
  font-size: 28rpx;
  font-family: "微软雅黑";
}
.user_reset view{
  padding:20rpx 0;
  height:60rpx;
  line-height: 60rpx;
  width:100%;
}
.user_reset .register{
  text-align: right;
  padding:20rpx 42rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  -webkit-box-sizing: border-box;

}
.user_reset .register text{
  color:#ff0033;
}
.user_reset button{
    margin:70rpx 30rpx 0 0;
    background: #ff0033;
    color:#fff;
    width:90%;
    margin-left: 5%;
      border-radius: 50rpx;
}

