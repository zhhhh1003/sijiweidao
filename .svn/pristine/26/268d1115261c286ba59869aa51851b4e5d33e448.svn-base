
<view class="main">
    <view class="categroy-left">
        <view wx:for="{{list}}"  wx:key="{{item.id}}" data-sortid="{{item.id}}" 
        data-sortindex="{{index}}"
            bindtap="setSortBy"
            class="cate-list {{sortindex==index?'on':''}}">{{item.name}}</view>
    </view>

    <scroll-view class="categroy-right" scroll-y="{{isScroll}}" 
    scroll-into-view="{{toView}}" scroll-with-animation="true">
        <block wx:for="{{detail}}"  wx:key="index">
         <block wx:if="{{index == sortindex}}">
            <view id="{{item.id}}" class="cate-box">
                <view class="cate-title">
                    <text>{{item.cate}}</text>
                </view>
                <view class="product">
                    <view class="product-list" wx:for="{{item.detail}}" wx:key="index" wx:for-item="val">
                        <navigator url="../list/list">
                            <image src="{{val.thumb}}"></image>
                            <view class="classname"><text>{{val.name}}</text></view>
                        </navigator>
                    </view>
                </view>
            </view>
             </block> 
        </block>
    </scroll-view>

</view>