 var app = getApp()
Page({
  data: {
    userInfo: {},
    user:{
      phone:'',
      password:''
    },
    hasUser:false //判断是否注册
  },

  onLoad: function () {
    console.log('onLoad')
    var that = this
    //调用应用实例的方法获取全局数据
    app.getUserInfo(function (userInfo) {
      //更新数据
      that.setData({
        userInfo: userInfo
      })
    })
  },
  onShow() {
    this.setData({
      hasUser: false,
    });
  },
  formSubmit:function(e){
    //console.log(e.detail.value)
    var mobile=e.detail.value.mobile;
    var myreg = /^(((13[0-9]{1})|(15[0-9]{1})|(18[0-9]{1})|(17[0-9]{1}))+\d{8})$/;
    if (mobile.length != 11 && !myreg.test(mobile)) {
      wx.showToast({
        title: '请输入正确手机号',
        icon: 'success',
        duration: 1500
      })
      return false;
    }else{
      wx.showToast({
        title: '绑定成功',
        icon: 'success',
        duration: 1500
      })
      this.setData({
        hasUser: true // 注册成功
      })
    }
    // return true;
   
    
  },
  bindPhone: function (e){
    this.setData({
      'user.phone': e.detail.value
    });
  },
  bindPassword: function (e){
    this.setData({
      'user.password': e.detail.value
    })
  },
  addAddress:function(){
    wx.chooseAddress({
      success: function (res) {
        console.log(JSON.stringify(res))
      },
      fail: function (err) {
        console.log(JSON.stringify(err))
      }
    })
  }
})
