@import "../common/common.wxss";
@import "../orders/orders.wxss";

.orders-address::after{
    position: absolute;
    right: 30rpx;
    top: 60rpx;
    content: '';
    width:0;
    height: 0;
    border-top: 4rpx solid #fff;
    border-right: 4rpx solid #fff;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.ordes-attr{
  width:100%;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding:20rpx;
  border-bottom:20rpx solid #ededed;
}
.ordes-attr view{
  width:100%;
  height:60rpx;
  line-height: 60rpx;
  color:#a5a5a5;
  font-size: 26rpx;
}
.ordes-attr button{
  margin-bottom: 20rpx;
 
}
.orders-footer{
    position: relative;
    bottom: 0;
    left: 0;
    width: 100%;
    /* height: 95rpx;
    line-height: 95rpx; */
    border-top: 1rpx solid #ededed;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding:20rpx;
}
.ordes-attr view text{
  color: #ff0033;
}